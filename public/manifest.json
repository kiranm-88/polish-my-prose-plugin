
{
  "manifest_version": 3,
  "name": "Polish My Prose",
  "version": "1.0.0",
  "description": "AI-powered writing assistant with grammar checking and style suggestions",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Polish My Prose",
    "default_icon": {
      "16": "public/favicon.ico",
      "32": "public/favicon.ico",
      "48": "public/favicon.ico",
      "128": "public/favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
